{{#if updateQuestionForm}}
  <h4>Update Question: {{question.pregunta}}</h4>
    <div>
      <form>
        <div class="form-group">
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          {{input  value=pregunta id="pregunta" placeholder=question.pregunta}}
        </div>
        <!-- had to change attribute name to pregunts. a value=(routename) generates ember data -->

        <div class="form-group">
          {{input value=notes id="notes" placeholder=question.notes}}
        </div>

        <button {{action 'update' question}}>Update</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
